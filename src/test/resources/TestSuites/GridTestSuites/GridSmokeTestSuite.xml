<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="RemoteSmokeTestSuite" verbose="1" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="com.herokuapp.theinternet.base.ExtentReporterNG"></listener>
    </listeners>

    <!-- when environment parameter value is set to "local" WebDriverManager instance is used to create driver for running tests !-->
    <!-- <parameter name="environment" value="local"></parameter> -->
    <!-- when environment parameter value is set to "grid" WebDriverManager instance is used to create driver for running tests !-->
    <parameter name="environment" value="grid"></parameter>
    <!-- Test for "chrome" browser -->
    <test name="NegativeLoginTest-CH">
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="ip" value="40.114.204.255:4444"></parameter>
        <parameter name="username" value="incorrectUsername"></parameter>
        <parameter name="password" value="SuperSecretPassword!"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.loginpagetests.NegativeLogInTests"/>
        </classes>
    </test>
    <!-- Test for "firefox" browser -->
    <test name="NegativeLoginTest-FF">
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="ip" value="40.114.204.255:4444"></parameter>
        <parameter name="username" value="incorrectUsername"></parameter>
        <parameter name="password" value="SuperSecretPassword!"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.loginpagetests.NegativeLogInTests"/>
        </classes>
    </test>
    <!-- Test for "edge" browser -->
    <test name="NegativeLoginTest-MSED">
        <parameter name="browser" value="microsoftedge"></parameter>
        <parameter name="ip" value="192.168.1.111:4444"></parameter>
        <parameter name="username" value="incorrectUsername"></parameter>
        <parameter name="password" value="SuperSecretPassword!"></parameter>
        <parameter name="expectedMessage" value="Your username is invalid!"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.loginpagetests.NegativeLogInTests"/>
        </classes>
    </test>
    <!-- Test for "chrome" browser -->
    <test name="EditorTest-CH">
        <parameter name="browser" value="chrome"></parameter>
        <parameter name="ip" value="40.114.204.255:4444"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.editortests.EditorTests"/>
        </classes>
    </test>
    <!-- Test for "firefox" browser -->
    <test name="WindowsTest-FF">
        <parameter name="browser" value="firefox"></parameter>
        <parameter name="ip" value="40.114.204.255:4444"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.windowstests.WindowsTests"/>
        </classes>
    </test>
    <!-- Test for "edge" browser -->
    <test name="KeypressesTest-MSED">
        <parameter name="browser" value="microsoftedge"></parameter>
        <parameter name="ip" value="192.168.1.111:4444"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.keypressestests.KeyPressesTests"/>
        </classes>
    </test>
</suite>